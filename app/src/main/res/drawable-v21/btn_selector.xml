<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff8900"/>
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryDark" android:startColor="#ff8900"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff8900"/>
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:endColor="@color/colorPrimaryDark" android:startColor="#ff8900"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff8900"/>
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:endColor="#ff8900" android:startColor="#ff8900"/>
        </shape>
    </item>
</selector>
