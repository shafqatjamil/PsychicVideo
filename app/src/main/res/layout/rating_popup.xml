<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/imagebg"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45"
            app:srcCompat="@drawable/bg" />
        <TextView
            android:id="@+id/textView_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imagebg"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/imagebg"
            app:layout_constraintRight_toRightOf="@+id/imagebg"
            app:layout_constraintTop_toTopOf="@+id/imagebg"
            app:layout_constraintVertical_bias="0.04000002"
            tools:text="RATING"/>
        <RatingBar
            android:id="@+id/popup_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="24dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"
            app:layout_constraintBottom_toBottomOf="@+id/imagebg"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintLeft_toLeftOf="@+id/imagebg"
            app:layout_constraintRight_toRightOf="@+id/imagebg"
            app:layout_constraintTop_toTopOf="@+id/imagebg"
            app:layout_constraintVertical_bias="0.100000024" />
        <EditText
            android:id="@+id/comment_rating"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="     Write comment here"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:imeOptions="flagNoEnterAction|actionDone"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/imagebg"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintLeft_toLeftOf="@+id/imagebg"
            app:layout_constraintRight_toRightOf="@+id/imagebg"
            app:layout_constraintTop_toTopOf="@+id/imagebg"
            app:layout_constraintVertical_bias="0.49"/>
        <Button
            android:id="@+id/button_submit"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="@+id/imagebg"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@+id/imagebg"
            app:layout_constraintRight_toRightOf="@+id/imagebg"
            app:layout_constraintTop_toTopOf="@+id/imagebg"
            app:layout_constraintVertical_bias="0.9" />
        <Button
            android:id="@+id/button_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            app:layout_constraintBottom_toBottomOf="@+id/imagebg"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintLeft_toLeftOf="@+id/imagebg"
            app:layout_constraintRight_toRightOf="@+id/imagebg"
            app:layout_constraintTop_toTopOf="@+id/imagebg"
            app:layout_constraintVertical_bias="0.9" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>