<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/navbarbg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="MyAdvisorTarot"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewStart"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif"
            android:typeface="sans" />


        <ImageView
            android:id="@+id/credit_bg"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/title_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@color/cardview_shadow_start_color"
            android:layout_width="60dp" />

        <TextView
            android:id="@+id/Credit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits"
            fontPath="MyriadPro-Cond.otf"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/credit_bg"
            app:layout_constraintLeft_toLeftOf="@+id/credit_bg"
            app:layout_constraintRight_toRightOf="@+id/credit_bg"
            app:layout_constraintTop_toTopOf="@+id/credit_bg"
            app:layout_constraintVertical_bias="0.19" />

        <TextView
            android:id="@+id/toolbar_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            fontPath="MyriadPro-Cond.otf"
            android:textSize="12sp"
            android:textColor="@color/text_orange"
            app:layout_constraintBottom_toBottomOf="@+id/credit_bg"
            app:layout_constraintLeft_toLeftOf="@+id/credit_bg"
            app:layout_constraintRight_toRightOf="@+id/credit_bg"
            app:layout_constraintTop_toBottomOf="@+id/Credit_textview"
            app:layout_constraintVertical_bias="0.39"
            android:fontFamily="monospace"
            android:typeface="monospace" />

        <ImageButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/md_nav_back"
            android:id="@+id/tool_bar_backButton"
            android:visibility="gone"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
        <!--android:id="@+id/title_credits"-->
        <!--android:layout_width="304dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:paddingRight="20dp"-->
        <!--android:text="credits"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="20sp"-->
        <!--tools:layout_editor_absoluteY="0dp"-->
        <!--tools:layout_editor_absoluteX="5dp"/>-->


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>
