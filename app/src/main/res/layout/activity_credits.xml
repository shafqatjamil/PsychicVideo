<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context="avreye.mytarotadvisor.ui.CreditsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toTopOf="@+id/activity_credits"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/navbarbg"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.32999998"
        tools:text="Credits" />

    <TextView
        android:id="@+id/mycredits_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:text="You do not have enough Credits"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/mycredits"
        tools:text="You do not have enough Credits"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/mycredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text=" Balance : 8900 credits"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Current Balance : 8900 credits" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Each video reading costs 450 credits"
        android:textAlignment="center"
        android:textColor="@color/bb_inActiveBottomBarItemColor"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/mycredits" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Each text reading costs 150 credits"
        android:textAlignment="center"
        android:textColor="@color/bb_inActiveBottomBarItemColor"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/aline" />

    <ListView
        android:id="@+id/credits_list_view"
        android:layout_width="0dp"
        android:layout_height="364dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/activity_credits"
        app:layout_constraintLeft_toLeftOf="@+id/activity_credits"
        app:layout_constraintRight_toRightOf="@+id/activity_credits"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</android.support.constraint.ConstraintLayout>
